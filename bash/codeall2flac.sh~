#!/bin/bash
if [ $# -ne 2 ];then
    echo "it must be just 2 args"
    exit 1
fi
if [ ! -d "$1" ];then
    echo "first aurg must be dir"
    exit 2
fi
if [ ! -d "$2" ];then
    echo "second arg must be dir"
    exit 3
fi
fromdir="$1"
todir="$2"
(
    cd "$fromdir"
    for dirs in $(dirname  $(find ./ -iname "*.wav") |sort|uniq);do
	mkdir -p $dirs
    done
    )
